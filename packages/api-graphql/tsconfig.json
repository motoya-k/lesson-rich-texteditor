{
  "compilerOptions": {
      "allowJs": true,
      "declaration": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "module": "commonjs",
      "outDir": "lib",
      "sourceMap": true,
      "target": "ES2022",
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
          "@/*": [
              "./src/*"
          ]
      }
  },
  "include": [
      "**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}